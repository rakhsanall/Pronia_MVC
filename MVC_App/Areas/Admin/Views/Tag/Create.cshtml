
@using MVC_App.ViewModels.Tag
@model TagCreateVM



<form method="post" asp-action="Create" asp-controller="Tag" style="width: 100%; margin: 20px auto; padding: 20px; border: 1px solid #ccc; border-radius: 8px; background-color: #f9f9f9;">
    <label for="Name" style="display: block; margin-bottom: 8px; font-weight: bold;">Name:</label>
    <input type="text" asp-for=Name id="title" style="width: 100%; padding: 8px; margin-bottom: 15px; border: 1px solid #ccc; border-radius: 4px;">
    <span asp-validation-for="Name"></span>


  

    <div>
        <button type="submit" style="padding: 10px 20px; background-color: #4CAF50; color: white; border: none; border-radius: 4px; cursor: pointer;">Submit</button>

        <a asp-action="Index" asp-controller="Tag" style="text-decoration:none;text-align:center;color:white;margin:5px 30px;width:170px;background:orangered;border-radius:2px;font-size:20px;padding:5px 12px; cursor:pointer;">Cancel</a>

    </div>
</form>


