@using MVC_App.ViewModels.Category
@using MVC_App.ViewModels.Tag
@model CategoryUpdateVM



<form method="post" asp-action="Update" asp-controller="Category" style="width: 100%; margin: 20px auto; padding: 20px; border: 1px solid #ccc; border-radius: 8px; background-color: #f9f9f9;">

    <label for="title" style="display: block; margin-bottom: 8px; font-weight: bold;">Title:</label>
    <input type="text" id="title" asp-for=Name required style="width: 100%; padding: 8px; margin-bottom: 15px; border: 1px solid #ccc; border-radius: 4px;">
    <span asp-validation-for="Name"></span>




    <button type="submit" style="padding: 10px 20px; background-color: #4CAF50; color: white; border: none; border-radius: 4px; cursor: pointer;">Submit</button>

    <a asp-action="Index" asp-controller="Category" style="text-decoration:none;text-align:center;color:white;margin:5px 30px;width:170px;background:orangered;border-radius:2px;font-size:20px;padding:5px 12px; cursor:pointer;">Cancel</a>
</form>


